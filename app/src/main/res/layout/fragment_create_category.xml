<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.avb.iremember.fragments.FragmentCreateCategory">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cat_jeep"
                android:id="@+id/image"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cat_name"
                android:layout_alignBottom="@+id/image"
                android:layout_toRightOf="@+id/image"
                android:layout_toEndOf="@+id/image"
                android:layout_centerVertical="false"
                android:layout_alignBaseline="@+id/image"
                android:layout_above="@+id/image"
                android:layout_centerInParent="true"
                android:layout_weight="5.93"
                android:hint="Enter name"
                android:paddingTop="16dp"
                android:paddingRight="8dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll2">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typeSpinner"
                android:entries="@array/items_cat_condition"
                android:popupBackground="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:visibility="visible"
                style="?attr/spinnerStyle" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
